{
    "compilerOptions": {
        "target": "ES5",
        "declaration": true,
        "declarationMap": true, // This is valid because `declaration` is true
        "sourceMap": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "./dist",
        "emitDeclarationOnly": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
